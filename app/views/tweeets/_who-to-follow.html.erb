<div class="column">
  <%= render 'trends' %>
  <nav class="panel">
    <p class="panel-heading">Who to Follow</p>
  </nav>
  <% @can_be_followed.each do |user| %>
    <div class="panel-block" id="panel_<%= user.id %>">
      <article class="media">
        <div class="media-left">
          <figure class="image">
            <% if user.profile_pic.present? %>
              <%= image_tag user.profile_pic.url %>
            <% else %>
              <%= image_tag 'profile.png'  %>
            <% end %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content" id="<%= user.id %>">
            <p>
              <strong><%= user.name %></strong><br />
              <small><%= user.username %></small>
            </p>
            <% unless @current_user.following.map(&:user_id).include?(user.id) %>
              <p><%= button_tag 'Follow', class: 'follow' %></p>
            <% else %>
              <p><%= button_tag 'Following', class: 'unfollow', style: 'color:blue;' %></p>
            <% end %>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>

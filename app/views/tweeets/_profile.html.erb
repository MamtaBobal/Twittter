<div class="column is-one-quarter">
  <nav class="panel">
    <p class="panel-heading">Profile</p>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image">
              <% if current_user.profile_pic.present? %>
                <%= image_tag current_user.profile_pic.url  %>
              <% else %>
                <%= image_tag 'profile.png'  %>
              <% end %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= current_user.name %></strong><br />
              <small><%= current_user.username %></small>
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Tweeets</p>
            <p class="title is-6"><%= current_user.tweeets.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Following</p>
            <p class="title is-6"><%= current_user.following.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Followers</p>
            <p class="title is-6"><%= current_user.followers.count %></p>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
